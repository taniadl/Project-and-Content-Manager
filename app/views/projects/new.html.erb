<% if user_signed_in? %>
  <%= simple_form_for @project , method: :post do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit %>
  <% end %>
<% else %>
  <%= link_to "Join up", new_user_registration_path %>
<% end %>
